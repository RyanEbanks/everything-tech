<div class="post">

  <div class="card">
    <div class="card-content">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </div>
</div>

<div class="card">
  <div class="card-content">
    {{#if post.Comments}}
    <div class="card-header">
      <h3>Comments</h3>
    </div>

    <div class="card-body">
      {{#each post.Comments}}
      <div>
        <p>
          {{body}}
        </p>
        <p>
          &mdash; {{User.username}}, {{format_date createdAt}}
        </p>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>


<form id="new-comment-form" class="card">
  <div class="content">
    <h3>Add New Comment</h3>
  </div>

  <div class="content">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="comment-body">Comment</label>

    <textarea name="comment-body" class="form-input"></textarea>

    <button type="submit" class="btn">Submit</button>
  </div>
</form>
</div>

<script src="/js/comment.js"></script>