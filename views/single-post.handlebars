<div class="post myCard">
  <div class="card myCard">
    <div class="card-content">
      <h2>{{{post.title}}}</h2>
      <div>
        Posted by {{post.user.user_name}} on {{format_date post.date_created}}
      </div>
    </div>
    <div class="card-body">
      {{{post.body}}}
    </div>
  </div>
</div>

<h3>Comments</h3>
{{#if post}}
  {{#each post.comments}}
<div class="card myCard">
  <div class="card-content">
    <div>
      <p>
        {{{body}}}
      </p>
      <p>
        &mdash; {{user.user_name}}, {{{format_date date_created}}}
      </p>
    </div>
  </div>
</div>
    {{/each}}
{{/if}}


{{#if logged_in}}
<form id="new-comment-form" class="card myCard" action="/api/comment" method="POST">
  <div class="content">
    <h3>Add New Comment</h3>
  </div>

  <div class="content">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="comment-body">Comment</label>

    <textarea name="body" class="form-input"></textarea>

    <button type="submit" class="btn">Submit</button>
  </div>
</form>

{{/if}}
<script src="/js/comment.js"></script>
