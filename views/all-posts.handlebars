      {{#each post}}
<div class="card myCard">
  <div class="card-content">
    <div class="posts">
      <article class="content">
        <div class="content">
          <h2>
            <a href="/post/{{id}}">{{title}}</a>
          </h2>
          <div>
            Posted by {{user.user_name}} on {{format_date date_created}}
          </div>
        </div>
        <div class="card-body">
          {{{body}}}
        </div>
      </article>
    </div>
  </div>
</div>
      {{/each}}