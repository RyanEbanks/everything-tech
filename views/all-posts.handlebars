<div class="card">
  <div class="card-content">
    <div class="posts">
      {{#each posts}}
      <article class="content">
        <div class="content">
          <h2>
            <a href="/post/{{id}}">{{title}}</a>
          </h2>
          <div>
            Posted by {{User.username}} on {{format_date createdAt}}
          </div>
        </div>
        <div class="card-body">
          {{body}}
        </div>
      </article>
      {{/each}}
    </div>
  </div>
</div>